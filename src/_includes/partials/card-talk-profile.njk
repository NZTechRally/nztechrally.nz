{% macro card(content) %}
  <li class="card card-profile card-profile--horizontal">
    <picture class="card-profile__picture">
      <source srcset="{{ content.data.profilePhoto }}" media="(orientation: portrait)">
      <img src="{{ content.data.profilePhoto }}" alt="{{ content.data.profilePhotoAltText }}">
    </picture>

    <p class="card-profile__info">
      <a class="card-profile__link" href="{{ content.url | url }}">
        {{ content.page.fileSlug }}

        {% for talk in collections.talks | getTalksBySpeaker(content.page.fileSlug) %}
          <strong class="card-title card-title--talk-name">{{ talk.data.talkTitle }}</strong>
        {% endfor %}

        <span>
          {{ content.data.firstName }}
          {{ content.data.lastName }},
          {{ content.data.jobTitle }}
          {% if content.data.organisation %}
            @ {{ content.data.organisation }}
          {% endif %}
        </span>

        {% if content.data.role %}
          <strong>{{ content.data.role }}</strong>
        {% endif %}
      </a>
    </p>
  </li>
{% endmacro %}