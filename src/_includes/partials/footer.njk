<footer class="page-footer">
  <ul class="footer-social" aria-label="Social links">
    <li class="footer-social__item">
      <a rel="external" href="{{ site.linkedin }}" class="footer-social__link">
        {% svg "linkedin" %}
        <span class="footer-social__text">Linkedin</span>
      </a>
    </li>

    <li class="footer-social__item">
      <a rel="external" href="{{ site.twitter }}" class="footer-social__link">
        {% svg "twitter" %}

        <span class="footer-social__text">
          Twitter
        </span>
      </a>
    </li>

    <li class="footer-social__item">
      <a rel="external" href="{{ site.youtube }}" class="footer-social__link">
        {% svg "youtube" %}

        <span class="footer-social__text">
          Youtube
        </span>
      </a>
    </li>

    <li class="footer-social__item">
      <a rel="author" href="mailto:{{ site.email }}" class="footer-social__link">
        {% svg "email" %}

        <span class="footer-social__text">
          Email
        </span>
      </a>
    </li>
  </ul>

  <div class="content-block footnotes" aira-label="Site footnotes">
    <p>
      <a href="{{ '/code-of-conduct' | url }}">Code of conduct</a>, 
      <a href="{{ '/sales-policy' | url }}">ticket sales policy</a>, and
      <a href="{{ '/privacy-policy' | url }}">privacy policy</a>
    </p>
    <p>
      Last updated on <time datetime="{{ page.date }}">{{ page.date | readableDate }}</time>.
    </p>
    <p>
      <small>
        Copyright &copy; {{ page.date | readableYear }} by NZ Tech Rally. All rights reserved.
      </small>
    </p>
  </div>
</footer>