<script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "Organization",
    "url": "{{ '/about' | absoluteUrl(site.url) }}",
    "name": "{{ title + " â€“ " + site.title if title else site.title }}",
    "description": "{{ description if description else site.description }}",
    "email": "{{ site.email }}",
    "logo": {
      "@type": "ImageObject",
      "url": "{{ site.logo }}",
      "description": "{{ site.logoAlt }}",
      "width": "{{ site.logoWidth }}",
      "height": "{{ site.logoHeight }}"
    },
    "image": {
      "@type": "ImageObject",
      "url": "{{ featuredImage | absoluteUrl(site.url) if featuredImage else site.image }}",
